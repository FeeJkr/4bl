{% extends 'base.html.twig' %}

{% block content %}
    <div class="my-5 pt-sm-5">
        <div class="container">
            <div class="justify-content-center row">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="overflow-hidden card">
                        <div style="background-color: rgba(85,110,230,.25)!important">
                            <div class="row">
                                <img src="/images/sign-in.jpeg" style="max-width: 100%; height: auto; filter: contrast(90%) brightness(90%);">
                            </div>
                        </div>
                        <div class="pt-0 card-body">
                            <div class="mb-4 mt-3 text-center" style="height: 4rem;">
                                <div>
                                    <h4>Welcome Back!</h4>
                                </div>
                                Sign in to continue.
                            </div>
                            <div class="p-2">
                                <form class="form-horizontal" id="sign-in-form">
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="email" style="font-weight: 500; margin-bottom: .5rem;">Email</label>
                                            <input name="email" placeholder="Enter email" id="email" type="text" class="form-control" required style="font-size: .8125rem; padding: .47rem .75rem; font-weight: 400; line-height: 1.5; border: 1px solid #ced4da;">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="password" style="font-weight: 500; margin-bottom: .5rem;">Password</label>
                                            <input name="password" placeholder="Enter password" id="password" type="password" class="form-control" required style="font-size: .8125rem; padding: .47rem .75rem; font-weight: 400; line-height: 1.5; border: 1px solid #ced4da;">
                                        </div>
                                    </div>

                                    <div class="mt-5" style="display: grid !important;">
                                        <button class="btn btn-primary btn-block" style="font-size: .8125rem; padding: .47rem .75rem; border-radius: .25rem;font-weight: 400; line-height: 1.5;" id="sign-in-button">Log In</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center" style="display: block;">
                        <p style="display: block;">
                            <span style="font-weight: 300;">Don't have an account?</span>
                            <a href="{{ path('accounts.user.register.page') }}" style="color: #556ee6!important; text-decoration: none; outline: none; font-weight: 600;">Signup</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sign-in-button').on('click', function (event) {
                event.preventDefault();


            });
        });
    </script>
{% endblock %}
