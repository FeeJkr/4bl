{% extends 'finances/dashboard.html.twig' %}

{% block submodules %}
    <div class="mt-3">
        <div class="row">
            <div class="offset-md-11 col-md-1">
                <a href="{{ path('finances.category.create.page') }}" class="btn btn-success" style="text-decoration: none;">
                    Create new
                </a>
            </div>
        </div>

        {% for type, categories in categoriesByType %}
            <h4 style="margin-top: 20px">{{ type|capitalize }}</h4>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col" class="text-center">Category name</th>
                    <th scope="col" class="text-center">Icon</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <th scope="row" class="text-center">{{ category.id }}</th>
                        <td class="text-center">{{ category.name }}</td>
                        <td class="text-center" style="font-size: 22px;">{{ category.icon }}</td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <button type="button" class="btn btn-sm btn-warning">Edit</button>
                                <button type="button" class="btn btn-sm btn-danger">Delete</button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endfor %}
    </div>
{% endblock %}
